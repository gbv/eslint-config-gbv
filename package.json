{
  "name": "eslint-config-gbv",
  "version": "0.1.0",
  "description": "Internal linting rules for GBV projects.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --quiet --env node -c index.js ./**/*.js",
    "fix": "eslint --fix --quiet --env node -c index.js ./**/*.js",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix --quiet --env node -c index.js"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gbv/eslint-config-gbv.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "Stefan Peters <stefan.peters@gbv.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gbv/eslint-config-gbv/issues"
  },
  "homepage": "https://github.com/gbv/eslint-config-gbv#readme",
  "peerDependencies": {
    "eslint": ">= 5",
    "eslint-plugin-vue": ">= 5"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "lint-staged": "^10.0.8",
    "pre-commit": "^1.2.2"
  }
}
